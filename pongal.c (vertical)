#include <stdio.h>
#include <string.h>
#include<unistd.h>
#include <stdlib.h>
int main()
{
    char str[]="HAPPY PONGAL";
    int i,len,j;
    len=strlen(str);
    for(i=0;i<len;i++)
    {
        printf("%c",str[i]);
        usleep(1000000);
    }
    printf("\n");
    return 0;
}
